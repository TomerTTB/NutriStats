# Artifact Cleanup Configuration
# Copy this file to .env.local or set these environment variables

# Enable/disable artifact cleanup before test runs
CLEANUP_ARTIFACTS=true

# Cleanup mode: 'all', 'selective', 'old', 'disabled'
CLEANUP_MODE=all

# Age threshold for 'old' mode (in days)
CLEANUP_AGE_DAYS=7

# Selective cleanup options (used when CLEANUP_MODE=selective)
CLEANUP_SCREENSHOTS=true
CLEANUP_VIDEOS=true
CLEANUP_TRACES=true
CLEANUP_REPORTS=false

# Retention limits (0 = unlimited)
MAX_SCREENSHOTS=100
MAX_VIDEOS=50
MAX_TRACES=20
MAX_REPORTS=10

# Size limits in MB (0 = unlimited)
MAX_SCREENSHOTS_SIZE_MB=500
MAX_VIDEOS_SIZE_MB=1000
MAX_TRACES_SIZE_MB=200
MAX_REPORTS_SIZE_MB=100

# Logging options
ARTIFACT_VERBOSE=false
SHOW_ARTIFACT_STATS=true